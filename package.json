  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "auto": {
    "plugins": [
      "npm",
      "released",
      "all-contributors",
      [
